{
  "name": "top-github-users-action",
  "version": "1.0.0",
  "description": "Modern GitHub Action to track and analyze top GitHub users by country",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "ncc build src/index.js -o dist --source-map --license licenses.txt && node -e \"require('fs').copyFileSync('config.json', 'dist/config.json')\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "changelog:first": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "version": "npm run changelog && git add CHANGELOG.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zaid-maker/top-github-users-action.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript",
    "ES Modules",
    "GraphQL",
    "User Analytics",
    "GitHub Statistics"
  ],
  "author": {
    "name": "Zaid Hafeez",
    "url": "https://github.com/Zaid-maker"
  },
  "contributors": [
    {
      "name": "Gayan Kuruppu",
      "url": "https://github.com/gayanvoice",
      "role": "Original Creator",
      "contributions": [
        "Initial implementation",
        "Core functionality",
        "Documentation"
      ]
    },
    {
      "name": "Zaid Hafeez",
      "url": "https://github.com/Zaid-maker",
      "role": "Maintainer",
      "contributions": [
        "Code modernization",
        "Dependency updates",
        "Documentation improvements"
      ]
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Zaid-maker/top-github-users-action/issues"
  },
  "homepage": "https://github.com/Zaid-maker/top-github-users-action#readme",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@octokit/graphql": "^7.0.2",
    "fs-extra": "^11.1.1",
    "simple-git": "^3.19.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@vercel/ncc": "^0.38.1",
    "babel-jest": "^29.7.0",
    "conventional-changelog-cli": "^5.0.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
